@model Entidades.ENSaludCentroCostos
@{ ViewBag.Title = "Crear Centro de Costos";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
@section Styles {

}
@using (Html.BeginForm("Crear", "CentroCostos", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CodigoCentroCosto)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.CodigoCliente, "Cliente", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("CodigoCliente", null, new { id = "drpCliente", @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(model => model.CodigoCliente)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DescripcionCentroCosto, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.DescripcionCentroCosto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescripcionCentroCosto, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>
 

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href='@Url.Action("Index", "CentroCostos")' class="btn btn-default float-right">Cancelar</a>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/plugins/jquery-validation/jquery.validate.min.js")
    @Scripts.Render("~/Content/plugins/jquery-validation/additional-methods.min.js")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
}
