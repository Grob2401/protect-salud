@using Entidades;
@{
    ViewBag.Title = "Centros de Costo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    @Styles.Render("~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/sweetalert2/sweetalert2.min.css")
    @Styles.Render("~/Content/plugins/select2/css/select2.min.css")
}
<div class="row">
    <div class="col-12">
        <div class="card card-gray">
            <div class="card-header">
                <div class="col text-left">
                    <h5 class="card-title">
                        <i class="fas fa-table"></i>
                        Centro de Costos
                    </h5>
                </div>
                <div class="col text-right">
                    <a class="btn btn-flat bg-primary btn-sm" href='@Url.Action("Crear", "CentroCostos")'>
                        <i class="fas fa-plus-circle text-warning"></i> Agregar
                    </a>
                </div>

            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <hr />
                @using (Html.BeginForm("Index", "CentroCostos", FormMethod.Post))
                {
                    <div class="row justify-content-end">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="drpTipoCliente">Búsqueda:</label>
                                <input type="text" id="txtBusquedaCentroCostos" class="form-control form-control-sm" name="txtBusquedaAsegurados" placeholder="RUC | DNI | Nombres y Apellidos | Razón Social | Contrato" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label style="visibility:hidden;">Búsqueda:</label>
                                <div>
                                    <button type="submit" class="btn btn-dark btn-sm">
                                        <i class="fa fa-search-plus text-warning"></i>&nbsp;&nbsp;Buscar
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col d-flex justify-content-start">
                            <div class="col text-left">
                                <label class="text-bold text-primary">PÁGINA </label>&nbsp;
                                <label class="text-bold" style="font-size:9pt">(@Convert.ToInt32(ViewData["pageCount"]) DE @(Convert.ToInt32(ViewData["ultimo"])+1))</label>&nbsp;&nbsp;
                                <i class="fa fa-angle-double-right text-warning"></i>
                                <label class="text-bold text-success" style="font-size:9pt">Centros de Costo disponibles</label>&nbsp;
                                <label class="text-bold" style="font-size:9pt">(@Convert.ToInt32(ViewData["todos"]))</label>
                            </div>
                        </div>
                        <div class="col d-flex justify-content-end">
                            <ul class="pagination">
                                <li class="page-item success">
                                    <a class="page-link" href="@Url.Action("Index", new { page = 1 })">&nbsp;&nbsp;Pág. 1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Convert.ToInt32(ViewData["pageCount"]) - 1 })">&nbsp;&nbsp;<i class="fa fa-angle-left text-primary"></i>&nbsp;&nbsp;Anterior</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Convert.ToInt32(ViewData["pageCount"]) + 1 })">Siguiente&nbsp;&nbsp;<i class="fa fa-angle-right text-primary"></i></a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Convert.ToInt32(ViewData["ultimo"]) + 1 })">Pág. @(Convert.ToInt32(ViewData["ultimo"])+1)&nbsp;&nbsp;</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="table-responsive">

                        <table id="dglista" class="table table-bordered table-hover">
                            <thead class="bg-primary">
                                <tr>
                                    <th>N°</th>
                                    <th>Cliente</th>
                                    <th>RUC</th>
                                    <th>Centro Costo</th>
                                    <th>Razon Social</th>
                                    <th style="width: 100px">EDITAR</th>
                                    <th style="width: 100px">ELIMINAR</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ENSaludCentroCostos centrocostos in (List<ENSaludCentroCostos>)ViewBag.CentroCostos)
                                {
                                    <tr>
                                        <td>@centrocostos.RowNumber </td>
                                        <td>@centrocostos.CodigoCliente</td>
                                        <td>@centrocostos.RUC</td>
                                        <td>@centrocostos.DescripcionCentroCosto </td>
                                        <td>@centrocostos.RazonSocial</td>
                                        <td class="project-actions text-center" width="100px">
                                            <a class="btn btn-info btn-sm" href='@Url.Action("Crear", "CentroCostos", new { id = centrocostos.CodigoCentroCosto, idcliente = centrocostos.CodigoCliente })'>
                                                <i class="fas fa-pencil-alt text-warning"></i>&nbsp;&nbsp;Editar
                                            </a>
                                        </td>
                                        <td class="project-actions text-center" width="100px">
                                            <button type="button" class="btn btn-danger btn-sm text-white" onclick="DeleteCentroCosto(this);" data-request-url='@Url.Action("Eliminar", "CentroCostos", new { idcliente = centrocostos.CodigoCliente , idCentro = centrocostos.CodigoCentroCosto })'>
                                                <i class="fas fa-times text-warning"></i>&nbsp;&nbsp;Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>

                    </div>


                }
            </div>
            <!-- /.card-body -->
        </div>

    </div>
    <!-- /.col -->
</div>
@section Scripts {
    @Scripts.Render("~/Content/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js")
    @Scripts.Render("~/Content//plugins/datatables-responsive/js/responsive.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/select2/js/select2.full.min.js")
    @Scripts.Render("~/Content/plugins/sweetalert2/sweetalert2.min.js")
    @Scripts.Render("~/Content/Util/util.js")

    <script>
        $(function () {

            $('#dglista').DataTable({
                "scrollY": "500px",
                "scrollCollapse": true,
                "paging": false,
                "lengthChange": false,
                "ordering": true,
                "info": false,
                "autoWidth": false,
                "responsive": false,
                "searching": false,
                "lengthMenu": [[10, 50, -1], [10, 50, "Todos"]],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });

    </script>

    <script>
        var mensaje = "@ViewData["MensajeCentroCosto"]";
        console.log(mensaje);
        if (mensaje != "") {
            console.log(mensaje);
            if (mensaje.includes("Excelente")) {
                Swal.fire({
                    icon: 'success',
                    title: 'Mensaje',
                    html: mensaje,
                    showCloseButton: true
                });
            }
            else if (mensaje.includes("Advertencia")) {
                Swal.fire({
                    icon: 'info',
                    title: 'Mensaje',
                    html: mensaje,
                    showCloseButton: true
                });
            }
            else
            {
                Swal.fire({
                    icon: 'error',
                    title: 'Mensaje',
                    html: mensaje,
                    showCloseButton: true
                });
            }
        }

        function DeleteCentroCosto(e)
        {
            var url_method = e.getAttribute('data-request-url');
            Swal.fire({
                title: '¿Desea eliminar el Centro de Costo?',
                text: "Se eliminará el registro.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, continuar',
                cancelButtonText: 'No'
            }).then(function (result) {
                if (result.value == true) {

                    $.ajax({
                        type: "POST",
                        url: url_method,
                        success: function (data) {
                            var sms = data;
                            var ruta = "@Url.Action("Index","CentroCostos")";
                            mensajeRedirect(sms, ruta);
                        }

                    });
                }
            });
        }

    </script>
}












