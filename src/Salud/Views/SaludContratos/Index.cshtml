@using Entidades;
@{
    ViewBag.Title = "Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    @Styles.Render("~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css")
}
<div class="row">
    <div class="col-md-2">
        <div class="card card-info card-outline shadow-lg sticky-top">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-th-list"></i>
                    Opciones
                </h3>
            </div>
            <div class="card-body">
                <div class="row justify-content-center pt-2 pb-2">
                    <div class="col-md-7">
                        <div class="form">
                            <a class="btn btn-app bg-gradient-secondary" href='@Url.Action("Crear", "SaludContratos")'>
                                <i class="fas fa-plus-circle text-warning" style="font-size: 14px;"></i> Agregar
                            </a>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="form">
                            <a class="btn btn-app bg-gradient-primary" href='@Url.Action("Administrar", "SaludContratos")'>
                                <i class="fas fa-folder-plus text-warning" style="font-size: 14px;"></i> Administrar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-table"></i>
                    Lista de Contratos
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body ">
                
                <table id="dglista" class="table table-bordered table-hover">
                    <thead class="bg-gradient-lightblue">
                        <tr>
                            <th>CodigoCliente</th>
                            <th>RazonSocial</th>
                            <th>RUC</th>
                            <th>Contrato</th>
                            <th>TipoContrato</th>
                            <th>InicioVigencia</th>
                            <th>FinVigencia</th>
                            <th>Corredor</th>
                            <th>Ejecutivo</th>
                            <th style="width: 15%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ENSaludContratos SaludContratos in (List<ENSaludContratos>)ViewBag.SaludContratos)
                        {
                            <tr>
                                <td>@SaludContratos.CodigoCliente </td>
                                <td>@SaludContratos.RazonSocial </td>
                                <td>@SaludContratos.RUC </td>
                                <td>@SaludContratos.CodigoContrato </td>
                                <td>@SaludContratos.CodigoTipoContrato </td>
                                <td>@SaludContratos.InicioVigencia </td>
                                <td>@SaludContratos.FinVigencia </td>
                                <td>@SaludContratos.CodigoCorredor </td>
                                <td>@SaludContratos.CodigoEjecutivo </td>

                                <td class="project-actions text-center">
                                    <form action='@Url.Action("Eliminar", "SaludContratos", new {id = SaludContratos.CodigoContrato,idcliente=SaludContratos.CodigoCliente})' method="POST"
                                          onsubmit="return confirm('¿Está seguro de eliminar el registro?');">
                                        @Html.AntiForgeryToken()
                                        <div class="text-center" role="group">
                                            <a class="btn btn-info btn-sm" href='@Url.Action("Crear", "SaludContratos", new {id = SaludContratos.CodigoContrato,idcliente=SaludContratos.CodigoCliente})'>
                                                <i class="fas fa-pencil-alt text-warning">
                                                </i>&nbsp;&nbsp;
                                                Editar
                                            </a>
                                            <button type="submit" class="btn btn-danger btn-sm" title="Eliminar">
                                                <i class="fas fa-times text-warning">
                                                </i>&nbsp;&nbsp;
                                                Eliminar
                                            </button>
                                        </div>
                                    </form>

                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>

    </div>
    <!-- /.col -->
</div>
@section Scripts {
    @Scripts.Render("~/Content/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js")
    @Scripts.Render("~/Content//plugins/datatables-responsive/js/responsive.bootstrap4.min.js")

    <script>
        $(function () {

            $('#dglista').DataTable({
                "paging": true,
                "lengthChange": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "lengthMenu": [[5, 10, 50, -1], [5, 10, 50, "Todos"]],
                pageLength: 20,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });
    </script>
}

