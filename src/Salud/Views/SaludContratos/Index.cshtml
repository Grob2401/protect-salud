@using Entidades;
@model Entidades.ENClientes
@{
    ViewBag.Title = "Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    @Styles.Render("~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/select2/css/select2.min.css")
    @Styles.Render("~/Content/plugins/sweetalert2/sweetalert2.min.css")
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-gray">
            <div class="card-header">
                <div class="col text-left">
                    <h5 class="card-title">
                        <i class="fas fa-user-check"></i>
                        Contratos
                    </h5>
                </div>
                <div class="col text-right">
                    <a class="btn btn-flat bg-primary btn-sm" href='@Url.Action("Crear", "SaludContratos")'>
                        <i class="fas fa-user-plus text-warning" style="font-size: 14px;"></i>&nbsp;Agregar
                    </a>
                    <a class="btn btn-flat bg-info btn-sm" href='@Url.Action("Administrar", "SaludContratos")'>
                        <i class="fas fa-user-shield text-warning" style="font-size: 14px;"></i>&nbsp;Administrar
                    </a>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body ">
                @using (Html.BeginForm("Index", "SaludContratos", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="drpTipoCliente">Tipo Cliente:</label>
                                <input type="hidden" id="hdCodigoTipoCliente" name="hdCodigoTipoCliente" />
                                @Html.DropDownList("CodigoTipoCliente", null, new { id = "drpTipoCliente", @class = "form-control-sm js-example-responsive", @style = "width:100%", @onchange = "callChangeGetValor(this);" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="drpTipoCliente">Búsqueda:</label>
                                <input type="text" id="txtBusquedaContratos" class="form-control form-control-sm" name="txtBusquedaContratos" placeholder="RUC | DNI | Nombres y Apellidos | Razón Social" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label style="visibility:hidden;">Búsqueda:</label>
                                <div>
                                    <button type="submit" class="btn btn-dark btn-sm">
                                        <i class="fa fa-search-plus text-warning"></i>&nbsp;&nbsp;Buscar Contrato
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col d-flex justify-content-start">
                            <div class="col text-left">
                                <label class="text-bold text-primary">PÁGINA </label>&nbsp;
                                <label class="text-bold" style="font-size:9pt">(@Convert.ToInt32(ViewData["pageCount"]) DE @(Convert.ToInt32(ViewData["ultimo"])+1))</label>&nbsp;&nbsp;
                                <i class="fa fa-angle-double-right text-warning"></i>
                                <label class="text-bold text-success" style="font-size:9pt">Contratos disponibles</label>&nbsp;
                                <label class="text-bold" style="font-size:9pt">(@Convert.ToInt32(ViewData["todos"]))</label>
                            </div>
                        </div>
                        <div class="row  justify-content-end">
                            <div class="col d-flex justify-content-end">
                                <ul class="pagination">
                                    <li class="page-item success">
                                        <a class="page-link" href="@Url.Action("Index", new { page = 1 })">Pág. 1</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Convert.ToInt32(ViewData["pageCount"]) - 1 })">&nbsp;&nbsp;<i class="fa fa-angle-left text-primary"></i>&nbsp;&nbsp;Anterior</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Convert.ToInt32(ViewData["pageCount"]) + 1 })">Siguiente&nbsp;&nbsp;<i class="fa fa-angle-right text-primary"></i></a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Convert.ToInt32(ViewData["ultimo"]) + 1 })">Pág. @(Convert.ToInt32(ViewData["ultimo"])+1)&nbsp;&nbsp;</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table id="dglista" class="table table-bordered table-hover">
                            <thead class="bg-gradient-primary">
                                <tr>
                                    <th>N°</th>
                                    <th>CLIENTE</th>
                                    @if (ViewBag.IdNombreTabla != null)
                                    {
                                        if (ViewBag.IdNombreTabla == "01")
                                        {
                                            <th>RAZON SOCIAL</th>
                                        }
                                        else
                                        {
                                            <th>PATERNO</th>
                                            <th>MATERNO</th>
                                            <th>NOMBRES</th>
                                        }
                                    }
                                    <th>RUC | DNI</th>
                                    <th>CONTRATO</th>
                                    <th>TIPO CONTRATO</th>
                                    <th>INICIO VIGENCIA</th>
                                    <th>FIN VIGENCIA</th>
                                    <th hidden>Corredor</th>
                                    <th hidden>Ejecutivo</th>
                                    <th style="width: 10%">EDITAR</th>
                                    <th style="width: 10%">ELIMINAR</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ENSaludContratos SaludContratos in (List<ENSaludContratos>)ViewBag.SaludContratos)
                                {
                                    <tr>
                                        <td>@SaludContratos.RowNumber</td>
                                        <td>@SaludContratos.CodigoCliente </td>
                                        @if (ViewBag.IdNombreTabla != null)
                                        {
                                            if (ViewBag.IdNombreTabla == "01")
                                            {
                                                <td>@SaludContratos.RazonSocial</td>
                                            }
                                            else
                                            {
                                                <td>@SaludContratos.Paterno</td>
                                                <td>@SaludContratos.Materno</td>
                                                <td>@SaludContratos.Nombres</td>
                                            }
                                        }


                                        <td>@SaludContratos.RUC</td>
                                        <td>@SaludContratos.CodigoContrato</td>
                                        <td>@SaludContratos.CodigoTipoContrato</td>
                                        <td>@SaludContratos.InicioVigencia.ToString("dd-MM-yyyy")</td>
                                        <td>@SaludContratos.FinVigencia.ToString("dd-MM-yyyy")</td>
                                        <td hidden>@SaludContratos.CodigoCorredor</td>
                                        <td hidden>@SaludContratos.CodigoEjecutivo</td>
                                        <td class="project-actions text-center" width="100px">
                                            <a class="btn btn-info btn-sm" href='@Url.Action("Crear", "SaludContratos",new RouteValueDictionary( new { idcontrato = SaludContratos.CodigoContrato, idcliente = SaludContratos.CodigoCliente }))'>
                                                <i class="fas fa-pencil-alt text-warning">
                                                </i>&nbsp;&nbsp;
                                                Editar
                                            </a>
                                        </td>
                                        <td class="project-actions text-center" width="100px">
                                            <div class="text-center" role="group">
                                                <button type="button" class="btn btn-danger btn-sm" val1="@SaludContratos.CodigoContrato" val2="@SaludContratos.CodigoCliente" onclick="Delete(event);" title="Eliminar">
                                                    <i class="fas fa-times text-warning">
                                                    </i>&nbsp;&nbsp;
                                                    Eliminar
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                }
            </div>
            <!-- /.card-body -->
        </div>

    </div>
    <!-- /.col -->
</div>
@section Scripts {
    @Scripts.Render("~/Content/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js")
    @Scripts.Render("~/Content//plugins/datatables-responsive/js/responsive.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/select2/js/select2.full.min.js")
    @Scripts.Render("~/Content/plugins/sweetalert2/sweetalert2.min.js")
    @Scripts.Render("~/Content/Util/util.js")

    <script>

        $(function () {

            $('#dglista').DataTable({
                "scrollY": "450px",
                "scrollCollapse": true,
                "paging": true,
                "lengthChange": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": false,
                pageLength: 8,
                "searching": false,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });

        $(document).ready(function () {
            //$('.js-example-basic-single').select2();
            $(".js-example-responsive").select2({
                width: 'resolve' // need to override the changed default
            });
            const combito = document.getElementById("drpTipoCliente");
            callChangeGetValor(combito);
            var valor = "@ViewBag.IdNombreTabla";
            //console.log(valor);
            $("#drpTipoCliente").val(valor).trigger('change');
        });

        function callChangeGetValor(combo) {
            let valor = "";
            const idTipoCliente = document.getElementById("hdCodigoTipoCliente");
            var nomTabla = document.getElementById("nombreTabla");
            idTipoCliente.value = combo.value;
            valor = idTipoCliente.value
            //console.log(valor);
        }

        function Delete(e) {
            const boton = e.target;
            const con = boton.getAttribute('val1');
            const cli = boton.getAttribute('val2');

            var url_final = '@Url.Action("Eliminar", "SaludContratos")/';
            url_final += '?idcontrato=' + con + '&idcliente=' + cli + '';
            //console.log(con);
            //console.log(cli);
            Swal.fire({
                title: '¿Desea eliminar el Contrato seleccionado?',
                text: "Se eliminará el contrato.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, continuar',
                cancelButtonText: 'No'
            }).then(function (result) {
                if (result.value == true) {

                    $.ajax({
                        type: "POST",
                        url: url_final,
                        success: function (data) {
                            var sms = data;
                            var ruta = "@Url.Action("Index", "SaludContratos")";
                            mensajeRedirect(sms, ruta);
                        }

                    });

                }
            });

        }


    </script>
}

