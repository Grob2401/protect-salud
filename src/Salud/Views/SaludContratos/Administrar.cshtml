<script>

        var mensaje = "@TempData["ReceivedId"]";
        mostrarMensaje(mensaje);

        $(function () {
            var tablaLista
            tablaLista = $('#dglistaPlanDis').DataTable({
                "paging": true,
                "lengthChange": false,
                "ordering": true,
                "info": false,
                "autoWidth": false,
                "responsive": false,
                "lengthMenu": [[5, 10, 50, -1], [5, 10, 50, "Todos"]],
                "pageLength": 5,
                "searching": true,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });

        $(function () {
            var tablaLista
            tablaLista = $('#dglistaPlanReg').DataTable({
                "paging": true,
                "lengthChange": false,
                "ordering": true,
                "info": false,
                "autoWidth": false,
                "responsive": false,
                "lengthMenu": [[5, 10, 50, -1], [5, 10, 50, "Todos"]],
                "pageLength": 5,
                "searching": true,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });


        $(document).ready(function () {
            //$('.js-example-basic-single').select2();
            $(".js-example-responsive").select2({
                width: 'resolve' // need to override the changed default
            });

            callChangefunc(document.getElementById('drpCodigoCliente').value);
            //callChangeContrato(document.getElementById('drpCodigoContrato').value);
        });

        const razonSocial = document.getElementById('txtRazonSocial');
        const telefono1 = document.getElementById('txtTelefono1');
        const contacto = document.getElementById('txtPersonaContacto');
        const telefono2 = document.getElementById('txtTelefono2');
        const direccion = document.getElementById('txtDireccion');
        const correo = document.getElementById('txtCorreo');
        const codContrato = document.getElementById('drpCodigoContrato');
        var url_method = $('#obtener_ruta').val();

        function callChangefunc(id) {
            $.ajax({
                type: "GET",
                url: url_method,
                data: {
                    'id': id
                },
                dataType: "text",
                success: function (r) {
                    var dataparseada = JSON.parse(r);
                    var datos = [...dataparseada];
                    var contratos = [];
                    //console.log(datos);
                    razonSocial.value = dataparseada[0];
                    direccion.value = dataparseada[1];
                    telefono1.value = dataparseada[2];
                    contacto.value = dataparseada[3];
                    telefono2.value = dataparseada[4];
                    correo.value = dataparseada[5];
                    contratos = dataparseada[6];

                    codContrato.innerText = null;
                    for (var i = 0; i < contratos.length; i++) {
                        var opt = contratos[i].Text;
                        var tx = contratos[i].Text;

                        codContrato.innerHTML += "<option value=\"" + opt + "\">" + tx + "</option>";
                    }
                    let variable = contratos[0].Text;
                    callChangeContrato(variable);
                }
            });
        };

        //-------------
        const IniVigencia = document.getElementById('txtInicioVigencia');
        const FinVigencia = document.getElementById('txtFinVigencia');

        function callChangeContrato(id) {
            const clienteActual = document.getElementById('drpCodigoCliente').value
            var table = $('#dglistaPlanReg').DataTable();
            var url_method = $('#datosContrato_ruta').val();

            table.clear().draw();

            $.ajax({
                type: "GET",
                url: url_method,
                data: {
                    'Codcliente': clienteActual,
                    'idContrato': id,
                },
                dataType: "text",
                success: function (r) {
                    var dataparseada = JSON.parse(r);
                    var datos = [...dataparseada];
                    var contratos = [];
                    //console.log(datos);

                    var IniVigFormato = $.datepicker.formatDate('yy-mm-dd', new Date(Date(dataparseada[0])));
                    var FinVigFormato = $.datepicker.formatDate('yy-mm-dd', new Date(Date(dataparseada[1])));

                    IniVigencia.value = IniVigFormato;
                    FinVigencia.value = FinVigFormato;
                    $('#drpCorredor').val(dataparseada[2]).change();

                    const planes = dataparseada[3];

                    const planesContrato = planes.forEach(plan => {
                        //console.log(plan.CodigoPlanSC);
                        table.row.add([
                            "<button type='button' class='BorrarPlan btn btn-danger btn-sm'><i class='fa fa-times text-warning'></i></button>",
                            plan.CodigoPlanSC,
                            plan.DescripcionPlanSC
                        ]).draw(false);
                    });

                }
            });
        };

        $(document).ready(function () {
            $(".AgregaPlan").click(function () {
                txt1 = $(this).parents('tr').find("td:eq(0)").text().trim();
                txt2 = $(this).parents('tr').find("td:eq(1)").text().trim();

                var table = $('#dglistaPlanReg').DataTable();
                var tabla = document.getElementById("dglistaPlanReg");
                var valida = null;

                for (let row of tabla.rows) {
                    for (let cell of row.cells) {
                        if (cell.innerText === txt1) {
                            valida = cell.innerText;
                        }
                    }
                }

                if (valida == null) {
                    table.row.add([
                        "<button type='button' class='BorrarPlan btn btn-danger btn-sm'><i class='fa fa-times text-warning'></i></button>",
                        txt1,
                        txt2
                    ]).draw(false);
                }
                else {
                    Swal.fire({
                        icon: 'warning',
                        title: 'Mensaje',
                        html: 'El plan <b class="text-info">' + txt2 + '</b> ya fue asignado',
                        showCloseButton: true
                    })
                    return false;
                }

            });


            $('#dglistaPlanReg').on('click', '.BorrarPlan', function () {
                var table = $('#dglistaPlanReg').DataTable();
                table
                    .row($(this).parents('tr'))
                    .remove()
                    .draw();
            });

        });

        $("#Grabar").click(function () {
            var url = $(this).data('request-url');
            var table = $('#dglistaPlanReg').DataTable();
            //console.log('hola')
            if (!table.data().count()) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Mensaje',
                    html: 'El contrato no tiene planes asignados',
                    showCloseButton: true
                })
                return false;
            }
            else {

                $.ajax({
                    type: "POST",
                    url: "/SaludContratos/EliminarLimpiarPlanes",
                    data: {
                        'contrato': codContrato.value,
                    },
                    dataType: "text",
                    success: function (r) {

                    }
                });

                const tablaRecorre = $('#dglistaPlanReg').DataTable();
                var respuesta = "";
                var lineas = tablaRecorre.rows().count();
                var contador = 0;
                //console.log(lineas);
                //console.log(contador);

                tablaRecorre.rows().every(function (rowIdx, tableLoop, rowLoop) {
                    contador++;
                    var data = this.data();
                    //alert(data[rowLoop]);
                    $.ajax({
                        type: "POST",
                        url: "/SaludContratos/Administrar",
                        data: {
                            'contrato': codContrato.value,
                            'plan': data[1],
                            'fecini': IniVigencia.value,
                            'fecfin': FinVigencia.value,
                        },
                        dataType: "text",
                        success: function (r) {
                            //console.log(contador);
                            if (lineas === contador) {
                                //debugger;
                                window.location.href = url;
                            }
                        }
                    });
                });
            }
        });


</script>
    <script src="~/Scripts/Comandos.js"></script>


}