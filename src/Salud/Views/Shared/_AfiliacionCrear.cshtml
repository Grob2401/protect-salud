@model Entidades.ENSaludAsegurados
@{
    Layout = null;
}
@section Styles {
    @Styles.Render("~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css")
}
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Grupos Familiares</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-12">
                            <!-- jquery validation -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Completar <small>Todos los campos</small></h3>
                                </div>
                                <form role="form" id="frmUsuario" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="card-body row">
                                        <!-- Código Cliente -->
                                        <div class="form-group col-xl-4">
                                            <Label for="txtCodigoCliente">Código Cliente</Label>
                                            <input id="txtNombre" type="text" name="name" class="form-control" placeholder="Ingrese el código del cliente" />
                                        </div>
                                        <!-- Código Titular -->
                                        <div class="form-group col-xl-4">
                                            <Label for="txtCodigoTitular">Código Titular</Label>
                                            <input id="txtCodigoTitular" type="text" class="form-control" placeholder="Ingresae el código del titular" />
                                        </div>
                                        <!-- Categoría -->
                                        <div class="form-group col-xl-4">
                                            <Label for="txtCategoria">Categoría</Label>
                                            <input id="txtCategoria" type="text" class="form-control" placeholder="Ingrese la categoría" />
                                        </div>
                                    </div>
                                    <div class="card-body row">
                                        <!-- Código Parentesco -->
                                        <div class="form-group col-xl-4">
                                            <label class="control-label">Código Parentesco</label>
                                            <select id="drpParentesco" class="form-control"></select>
                                        </div>
                                        <!-- Código Vendedor -->
                                        <div class="form-group col-xl-4">
                                            <label class="control-label">Código Vendedor</label>
                                            <select id="drpVendedor" class="form-control"></select>
                                        </div>
                                        <!-- Código Centro de Costo -->
                                        <div class="form-group col-xl-4">
                                            <label class="control-label">Código Centro de Costo</label>
                                            <select id="drpCentroCosto" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="card-body row">
                                        <!-- Documento de Identidad -->
                                        <div class="form-group col-xl-4">
                                            <label class="control-label">Documento de Identidad</label>
                                            <select id="drpDocumentoIdentidad" class="form-control"></select>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Grabar</button>
            </div>
        </div>
    </div>
</div>