
@model Entidades.ENSaludAsegurados
@{
    Layout = null;
}
@section Styles {
    @Styles.Render("~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css")
}
<div class="modal fade" id="modalBuscarAfiliado" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="false" data-backdrop="static">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-body pb-1 mt-4">
                <div class="container-fluid">
                    <div class="row">
                        <!-- left column -->
                        <div class="col-md-12">
                            <!-- jquery validation -->
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h3 class="card-title">Afiliados <small>Búsqueda por datos</small></h3>
                                </div>
                                <div role="form" id="frmUsuario" action="#">
                                    @Html.AntiForgeryToken()
                                    <div class="card-body row pt-3">
                                        <!-- Código Cliente -->
                                        <div class="form-group col-xl-12">
                                            <Label for="txtCodigoCliente">Buscar cliente</Label>
                                            <input id="txtNombre" type="text" name="name" class="form-control text-uppercase" placeholder="Ingrese los datos del cliente" autocomplete="off" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline-primary">Buscar</button>
            </div>
        </div>
    </div>
</div>