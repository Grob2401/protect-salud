@using Entidades;
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    @Styles.Render("~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css")
}
<div class="row">
    <div class="col" hidden>
        <div class="card card-primary card-outline shadow-lg">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-table"></i>
                    Búsqueda:
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            <label for="drpTipoCliente">Usuario:</label>
                            <input type="text" id="txtBusquedaAsegurados" class="form-control form-control-sm" name="txtBusquedaAsegurados" placeholder="| Nombres y Apellidos | Correo Electrónico | DNI |" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label style="visibility:hidden;">Búsqueda:</label>
                            <div>
                                <button type="submit" class="btn btn-dark btn-sm">
                                    <i class="fa fa-search-plus text-warning"></i>&nbsp;&nbsp;Buscar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card card-gray shadow-lg">
            <div class="card-header">
                <div class="col text-left">
                    <h5 class="card-title">
                        <i class="fas fa-table"></i>
                        Usuario
                    </h5>
                </div>
                <div class="col text-right">
                    <a class="btn btn-flat bg-primary btn-sm" data-toggle="modal" data-target="#exampleModal">
                        <i class="fas fa-user-plus text-warning" style="font-size: 14px;"></i> Agregar
                    </a>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="text-white" hidden>
                    <a class="btn btn-flat bg-primary" data-toggle="modal" data-target="#exampleModal">
                        <i class="fas fa-user-plus text-warning" style="font-size: 14px;"></i> Agregar
                    </a>
                </div>
                <div class="table-responsive">
                    <table id="example2" class="table table-bordered">
                        <thead class="bg-primary">
                            <tr>
                                <th>USUARIO</th>
                                <th>DNI</th>
                                <th>CORREO ELECTRÓNICO</th>
                                <th style="width: 8%">SEXO</th>
                                <th style="width: 8%">ESTADO</th>
                                <th style="width: 8%"> EDITAR</th>
                                <th style="width: 8%">ELIMINAR</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ENUsuario usuario in (List<ENUsuario>)ViewBag.Usuarios)
                            {
                                <tr>
                                    <td>@usuario.var_Nombre @usuario.var_Apellidos</td>
                                    <td>
                                        @usuario.var_DNI
                                    </td>
                                    <td>
                                        @usuario.var_Mail
                                    </td>
                                    <td>
                                        @if (usuario.bit_Sexo == true)
                                        {
                                            <span class="badge bg-primary badge-btn">Masculino</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning badge-btn">Femenino</span>
                                        }

                                    </td>

                                    <td>
                                        @if (usuario.int_Estado == 1)
                                        {
                                            <span class="badge bg-success badge-btn">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger badge-btn">Inactivo</span>
                                        }
                                    </td>
                                    <td class="project-actions text-center">
                                        <a class="btn btn-info btn-sm" href='@Url.Action("Crear", "Usuario", new {id = usuario.int_IdUsuario})'>
                                            <i class="fas fa-pencil-alt text-warning"></i>&nbsp;&nbsp;Editar
                                        </a>
                                    </td>
                                    <td class="project-actions text-center">
                                        <form action='@Url.Action("Eliminar", "Usuario", new {id = usuario.int_IdUsuario})' method="POST"
                                              onsubmit="return confirm('¿Está seguro de eliminar el usuario?');">
                                            @Html.AntiForgeryToken()
                                            <div class="text-center">

                                                <button type="submit" class="btn btn-danger btn-sm" title="Eliminar">
                                                    <i class="fas fa-times text-warning"></i>&nbsp;&nbsp;Eliminar
                                                </button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>
            <!-- /.card-body -->
        </div>

    </div>
    <!-- /.col -->
</div>

<!-- Modal -->
@Html.Partial("_UsuarioCrear", new ENUsuario() { int_Estado = 1 })

@section Scripts {
    @Scripts.Render("~/Content/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js")
    @Scripts.Render("~/Content//plugins/datatables-responsive/js/responsive.bootstrap4.min.js")

    <script>
        $(function () {

            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": false,
                "searching": false,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });
    </script>
}