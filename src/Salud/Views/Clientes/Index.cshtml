@using Entidades;
@model Entidades.ENClientes
@{
    //ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    @Styles.Render("~/Content/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/datatables-responsive/css/responsive.bootstrap4.min.css")
    @Styles.Render("~/Content/plugins/sweetalert2/sweetalert2.min.css")
    @Styles.Render("~/Content/plugins/select2/css/select2.min.css")
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-gray shadow-lg">
            <div class="card-header sticky-top">
                <div class="col text-left">
                    <h5 class="card-title">
                        <i class="fa fa-user-check"></i>
                        Contratantes
                    </h5>
                </div>
                <div class="col text-right">
                    <a class="btn btn-flat bg-primary btn-sm" href='@Url.Action("Crear", "Clientes")'>
                        <i class="fa fa-user-plus fa-4x text-warning" style="font-size: 14px;"></i>&nbsp;Agregar
                    </a>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body ">
                @using (Html.BeginForm("Index", "Clientes", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="drpTipoCliente">Tipo Cliente:</label>
                                <input type="hidden" id="hdCodigoTipoCliente" name="hdCodigoTipoCliente" />
                                @Html.DropDownList("CodigoTipoCliente", null, new { id = "drpTipoCliente", @class = "form-control-sm js-example-responsive", @style = "width:100%", @onchange = "callChangeGetValor(this)" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="drpTipoCliente">Búsqueda:</label>
                                <input type="text" id="txtBusquedaClientes" class="form-control form-control-sm" name="txtBusquedaClientes" placeholder="RUC | DNI | Nombres y Apellidos | Razón Social" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label style="visibility:hidden;">Búsqueda:</label>
                                <div>
                                    <button type="submit" class="btn btn-dark btn-sm">
                                        <i class="fa fa-search-plus text-warning"></i>&nbsp;&nbsp;Buscar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col d-flex justify-content-start">
                            <div class="col text-left">
                                <label class="text-bold text-primary">PÁGINA </label>&nbsp;
                                <label class="text-bold" style="font-size:9pt">(@Convert.ToInt32(ViewData["pageCount"]) DE @(Convert.ToInt32(ViewData["ultimo"])+1))</label>&nbsp;&nbsp;
                                <i class="fa fa-angle-double-right text-warning"></i>
                                <label class="text-bold text-success" style="font-size:9pt">Clientes disponibles</label>&nbsp;
                                <label class="text-bold" style="font-size:9pt">(@Convert.ToInt32(ViewData["todos"]))</label>
                            </div>
                        </div>
                        <div class="col d-flex justify-content-end">
                            <ul class="pagination">
                                <li class="page-item success">
                                    <a class="page-link" href="@Url.Action("Index", new { page = 1 })">&nbsp;&nbsp;Pág. 1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Convert.ToInt32(ViewData["pageCount"]) - 1 })">&nbsp;&nbsp;<i class="fa fa-angle-left text-primary"></i>&nbsp;&nbsp;Anterior</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Convert.ToInt32(ViewData["pageCount"]) + 1 })">Siguiente&nbsp;&nbsp;<i class="fa fa-angle-right text-primary"></i></a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Convert.ToInt32(ViewData["ultimo"]) + 1 })">Pág. @(Convert.ToInt32(ViewData["ultimo"])+1)&nbsp;&nbsp;</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="dglista" class="table table-bordered table-hover">
                            <thead class="bg-gradient-primary">
                                <tr>
                                    <th>N°</th>
                                    <th>Codigo</th>
                                    <th>RUC</th>
                                    <th>Razón Social</th>
                                    <th>Paterno</th>
                                    <th>Materno</th>
                                    <th>Nombres</th>
                                    <th>Dirección</th>
                                    <th>Teléfono</th>
                                    @*<th>Contacto</th>
                            <th>Email</th>*@
                                    <th>TipoCliente</th>
                                    @*<th>Corredor</th>
                            <th>Ejecutivo</th>*@
                                    <th style="width: 10%">Editar</th>
                                    <th style="width: 10%">Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ENClientes Clientes in (List<ENClientes>)ViewBag.Clientes)
                                {
                                    <tr>
                                        <td>@Clientes.RowNumber</td>
                                        <td>@Clientes.CodigoCliente </td>
                                        <td>@Clientes.RucDni </td>
                                        <td>@Clientes.RazonSocial </td>
                                        <td>@Clientes.Paterno </td>
                                        <td>@Clientes.Materno </td>
                                        <td>@Clientes.Nombres </td>
                                        <td>@Clientes.Direccion </td>
                                        <td>@Clientes.Telefono1 </td>
                                        <td>@Clientes.CodigoTipoCliente </td>
                                        <td class="project-actions text-center" width="70px">
                                            <a class="btn btn-info btn-sm" href='@Url.Action("Crear", "Clientes", new {id = Clientes.CodigoCliente})'>
                                                <i class="fas fa-pencil-alt text-warning"></i>&nbsp;Editar
                                            </a>
                                        </td>
                                        <td class="project-actions text-center" width="100px">
                                            <div class="text-center" role="group">
                                                <button type="button" class="btn btn-danger btn-sm" onclick="Delete(event);" title="Eliminar">
                                                    <i class="fas fa-times text-warning"></i>&nbsp;Eliminar
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            <!-- /.card-body -->
        </div>

    </div>
    <!-- /.col -->
</div>
@section Scripts {
    @Scripts.Render("~/Content/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/datatables-responsive/js/dataTables.responsive.min.js")
    @Scripts.Render("~/Content//plugins/datatables-responsive/js/responsive.bootstrap4.min.js")
    @Scripts.Render("~/Content/plugins/sweetalert2/sweetalert2.min.js")
    @Scripts.Render("~/Content/plugins/select2/js/select2.full.min.js")
    @Scripts.Render("~/Content/Util/util.js")

<script>

        $(document).ready(function () {
            //$('.js-example-basic-single').select2();
            $(".js-example-responsive").select2({
                width: 'resolve' // need to override the changed default
            });
            const combito = document.getElementById("drpTipoCliente");
            callChangeGetValor(combito);
            var valor = "@ViewBag.IdNombreTabla";
            //console.log(valor);
            $("#drpTipoCliente").val(valor).trigger('change');
        });

        function callChangeGetValor(combo) {
            let valor = "";
            const idTipoCliente = document.getElementById("hdCodigoTipoCliente");
            idTipoCliente.value = combo.value;
            valor = idTipoCliente.value
            //console.log(valor);
        }

        $(function () {

            $('#dglista').DataTable({
                "scrollY": "600px",
                "scrollCollapse": true,
                "paging": true,
                "lengthChange": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": false,
                "lengthMenu": [[5, 10, 50, -1], [5, 10, 50, "Todos"]],
                pageLength: 8,
                "searching": false,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });

        function Delete(e) {
            console.log(e.target.parentElement.parentElement.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.textContent.trim());
            var cliente = e.target.parentElement.parentElement.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.previousElementSibling.textContent.trim();

            Swal.fire({
                title: '¿Desea eliminar el Contratante seleccionado?',
                text: "Se eliminará el contratante.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, continuar',
                cancelButtonText: 'No'
            }).then(function (result) {
                if (result.value == true) {

                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Eliminar", "Clientes")/' + cliente,
                        success: function (data) {
                            var sms = data;
                            var ruta = "@Url.Action("Index", "Clientes")";
                            mensajeRedirect(sms, ruta);
                        }

                    });

                }
            });

        }



        var mensaje = "@ViewBag.Message";
        mostrarMensaje(mensaje);

</script>
}